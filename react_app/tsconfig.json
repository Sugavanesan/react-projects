{
  "compilerOptions": {
    "target": "es2016",                                 // Specifies the ECMAScript target version.
    "lib": ["dom", "dom.iterable", "esnext"],           // Include necessary library files.
    "allowJs": true,                                    // Allow JavaScript files to be a part of the project.
    "skipLibCheck": true,                               // Skip type checking of declaration files.
    "strict": true,                                     // Enable all strict type checking options.
    "forceConsistentCasingInFileNames": true,           // Ensure imports have consistent casing.
    "module": "esnext",                                 // Use ESNext modules.
    "moduleResolution": "node",                        // Use Node.js module resolution strategy.
    "resolveJsonModule": true,                          // Allow importing JSON files.
    "isolatedModules": true,                            // Ensure files can be transpiled individually.
    "esModuleInterop": true,                            // Enable interoperability between CommonJS and ES modules.
    "jsx": "react-jsx"                                  // Specify React JSX transpilation.
  },
  "include": ["src"],                                   // Include the `src` folder.
  "exclude": ["node_modules"]                          // Exclude the `node_modules` folder.
}
